@page "/create"
@using CompanyRatingFrontend.Components.Toast
@using CompanyRatingFrontend.Data.Company

<PageTitle>Create</PageTitle>

<div>
    <Heading TextColor="TextColor.Primary" Size="HeadingSize.Is1">
        Create Company
    </Heading>

    <form class="my-6 flex flex-col gap-2" @onsubmit="OnCreate">
        <TextEdit
            Placeholder="Name*"
            @bind-Text="Vm.NewCompany.Name"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="1000"
        />
        <Select
            @bind-SelectedValue="Vm.NewCompany.Industry"
            class="h-[55px]"
            Width="Width.Px(300)"
        >
            @foreach (var industry in Enum.GetValues<CompanyIndustry>())
            {
                <SelectItem Value="@industry">@industry.ToDisplayString()</SelectItem>
            }
        </Select>
        <TextEdit
            Placeholder="Description"
            @bind-Text="Vm.NewCompany.Description"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="5000"
        />
        <TextEdit
            Placeholder="Address"
            @bind-Text="Vm.NewCompany.Address"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="1000"
        />
        <TextEdit
            Placeholder="City"
            @bind-Text="Vm.NewCompany.City"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="500"
        />
        <TextEdit
            Placeholder="Country"
            @bind-Text="Vm.NewCompany.Country"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="500"
        />
        <TextEdit
            Placeholder="Email"
            @bind-Text="Vm.NewCompany.Email"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="1000"
            InputMode="TextInputMode.Email"
        />
        <TextEdit
            Placeholder="Website"
            @bind-Text="Vm.NewCompany.Website"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="1000"
            InputMode="TextInputMode.Url"
        />
        <TextEdit
            Placeholder="LogoUrl"
            @bind-Text="Vm.NewCompany.LogoUrl"
            class="h-[55px]"
            Width="Width.Px(300)"
            MaxLength="1000"
            InputMode="TextInputMode.Url"
        />

        <Button
            Color="Color.Primary"
            Type="ButtonType.Submit"
            class="h-[55px]"
            Width="Width.Px(300)"
            Disabled="@Vm.CreateButtonDisabled"
        >
            Create
        </Button>
    </form>

    <GenericToast
        Header="Error"
        @bind-Visible="Vm.ErrorToastVisible"
    >
        <Body>
        An error occurred while submitting your request.
        </Body>
    </GenericToast>
</div>
